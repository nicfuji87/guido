{
  "root": true,
  "env": {
    "browser": true,
    "es2020": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "ignorePatterns": ["dist", ".eslintrc.json"],
  "rules": {
    "no-unused-vars": "off",
    "no-explicit-any": "off",
    "prefer-const": "warn",
    "no-console": "off",
    "no-undef": "off"
  }
}
